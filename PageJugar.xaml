                            <ControlTemplate TargetType="Button">
                                <Grid RenderTransformOrigin="0.5,0.5">
                                    <!-- Transformación aplicada a todo el contenido del botón -->
                                    <Grid.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="-4.54" />
                                            <TranslateTransform />
