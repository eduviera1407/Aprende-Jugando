<Window x:Class="AprendeJugando.VentanaNotificacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AprendeJugando"
        mc:Ignorable="d"
        Title="VentanaNotificacion" Height="600" Width="1000">
    <Grid>

        <!-- Fondo de la ventana -->
        <Grid.Background>
            <ImageBrush ImageSource="Images\Imagenes\fondoSinArboles.jpg"/>
        </Grid.Background>
        <!-- Texto de la notificación -->
        <Image Source="Images\Imagenes\ExplicacionJuegos.png" HorizontalAlignment="Center" Canvas.Left="93" VerticalAlignment="Top" Margin="0,18,0,0" Height="584" Width="692"/>
        <TextBlock x:Name="txtNotificacion" FontSize="25" FontWeight="Bold" FontFamily="Assets\#Lazydog"
               Foreground="Black" VerticalAlignment="Top" TextWrapping="Wrap"
               HorizontalAlignment="Center" Margin="0,157,0,0" Width="300" Height="201"
               ><Run Language="es-es"/></TextBlock>
        <!-- Botón de volver -->
        <Button Width="249" Height="200" Background="Transparent" BorderThickness="0"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                ToolTip="Volver a la pantalla principal" Click="BtnVolver_Click" Canvas.Left="262" Canvas.Top="284" Margin="10,0,0,0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image Source="Images\Imagenes\botonEntendido.png" Margin="4,0,13,0"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <!-- Imagen del personaje -->
        <Image x:Name="personajeSonriente" Height="335" Width="293"
       HorizontalAlignment="Right" VerticalAlignment="Bottom"
       Source="Images\Imagenes\Personaje\alegre.png"
       Canvas.Left="422" Canvas.Top="203" Margin="0,0,45,57"/>

    </Grid>
</Window>
